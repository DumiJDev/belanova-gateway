# Production Environment Configuration
SPRING_PROFILES_ACTIVE=prod

# Database Configuration
POSTGRES_DB=belanova_gateway
POSTGRES_USER=belanova
POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-change-this-in-production}

# JWT Configuration
JWT_SECRET=${JWT_SECRET:-production-jwt-secret-key-for-belanova-gateway-2024}
JWT_ISSUER=belanova-gateway
JWT_AUDIENCE=belanova-api

# Rate Limiting Configuration
GATEWAY_RATE_LIMIT_MAX_REQUESTS=100
GATEWAY_RATE_LIMIT_WINDOW_SIZE_MS=60000

# Logging Configuration
LOGGING_LEVEL_COM_BELANOVA_GATEWAY=INFO
LOGGING_LEVEL_IO_GITHUB_DUMIJDEV_BELANOVA_GATEWAY=INFO

# Redis Configuration
REDIS_PASSWORD=${REDIS_PASSWORD:-change-this-in-production}

# Application Ports
GATEWAY_PORT=8080
ADMIN_UI_PORT=8081

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD:-change-this-in-production}

# SSL Configuration (for Nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Database Connection Pool
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=30000
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=600000
SPRING_DATASOURCE_HIKARI_MAX_LIFETIME=1800000

# Redis Connection Pool
SPRING_REDIS_JEDIS_POOL_MAX_ACTIVE=20
SPRING_REDIS_JEDIS_POOL_MAX_IDLE=10
SPRING_REDIS_JEDIS_POOL_MIN_IDLE=5

# JVM Settings for Production
JAVA_OPTS=-Xms512m -Xmx2g -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0